<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/White</item>
        <item name="android:labelTextSize">6sp</item>

        <item name="android:textSize">6sp</item>
        <item name="android:colorForeground">@color/blue_pressed</item>
        <item name="android:background">@color/DarkSalmon</item>
        <item name="android:gravity">center</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Header">
        <item name="titleTextColor">@color/White</item>

        <item name="android:textColor">@color/White</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:colorForeground">@color/blue_pressed</item>
        <item name="android:background">@color/DarkSalmon</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomListView">
        <item name="android:background">#c7c7c7</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>/


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/holo_blue_bright</item>
        <!-- actionMenuTextColor is the color of the text of action (menuView) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/DarkBlue</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/Azure</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/AliceBlue</item>
        <item name="android:textColor">@color/white</item>


    </style>

</resources>
